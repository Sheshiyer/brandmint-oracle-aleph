// Brandmint — Brand Intelligence Report
// Auto-generated Typst document

#import "brand-template.typ": *

// --- Title Page ---
#align(center)[
  #v(4cm)
  #text(size: 28pt, weight: "bold", fill: brand-primary)[{{ brand_name }}]
  #v(0.5cm)
  #text(size: 14pt, fill: brand-secondary)[Brand Intelligence Report]
  #v(0.5cm)
  #line(length: 40%, stroke: 2pt + brand-accent)
  #v(1cm)
  #text(size: 11pt, fill: brand-support)[{{ tagline }}]
  #v(2cm)
  #text(size: 9pt, fill: brand-support)[Generated by Brandmint | {{ date }}]
]

#pagebreak()

// --- Table of Contents ---
#outline(indent: auto, depth: 2)
#pagebreak()

// --- Executive Summary ---
= Executive Summary

{{ executive_summary | default("This report provides a comprehensive analysis of the brand's market position, audience, strategy, and visual identity.", true) }}

#v(0.5em)

{% if key_metrics %}
#table(
  columns: (1fr, 1fr),
  inset: 10pt,
  [*Metric*], [*Value*],
  {% for m in key_metrics %}
  [{{ m.name }}], [{{ m.value }}],
  {% endfor %}
)
{% endif %}

#pagebreak()

// --- Market Analysis ---
= Market Analysis

== Niche Validation

{{ niche_analysis | default("Market research indicates a viable opportunity.", true) }}

{% if market_opportunities %}
== Key Opportunities

{% for opp in market_opportunities %}
- *{{ opp }}*
{% endfor %}
{% endif %}

{% if market_risks %}
== Risk Factors

{% for risk in market_risks %}
- {{ risk }}
{% endfor %}
{% endif %}

#pagebreak()

// --- Target Audience ---
= Target Audience

== Primary Persona

{{ persona_overview | default("The target audience represents an underserved segment.", true) }}

{% if persona_details %}
#table(
  columns: (auto, 1fr),
  inset: 10pt,
  {% for key, value in persona_details.items() %}
  [*{{ key }}*], [{{ value }}],
  {% endfor %}
)
{% endif %}

{% if persona_motivations %}
== Motivations & Pain Points

{% for m in persona_motivations %}
- {{ m }}
{% endfor %}
{% endif %}

#pagebreak()

// --- Brand Strategy ---
= Brand Strategy

== Positioning Statement

{% if positioning_statement %}
#quote[{{ positioning_statement }}]
{% else %}
The brand occupies a distinctive position in its market.
{% endif %}

{% if identity_pillars %}
== Identity Pillars

{% for pillar in identity_pillars %}
=== {{ pillar.name | default(pillar, true) }}

{{ pillar.description | default("", true) }}

{% endfor %}
{% endif %}

{% if competitive_moat %}
== Competitive Moat

{{ competitive_moat }}
{% endif %}

#pagebreak()

// --- Product Overview ---
= Product Overview

{{ product_description | default("A compelling product offering.", true) }}

{% if features %}
== Key Features

{% for f in features %}
- *{{ f.name | default(f, true) }}*{% if f.benefit is defined %} — {{ f.benefit }}{% endif %}

{% endfor %}
{% endif %}

{% if pricing %}
== Pricing

{{ pricing }}
{% endif %}

#pagebreak()

// --- Visual Identity ---
= Visual Identity

== Colour System

{% if palette %}
#table(
  columns: (auto, auto, 1fr),
  inset: 10pt,
  [*Role*], [*Hex*], [*Name*],
  {% for role, color in palette.items() %}
  [{{ role }}], [{{ color.hex | default(color, true) }}], [{{ color.name | default("", true) }}],
  {% endfor %}
)
{% endif %}

{% if typography %}
== Typography

{% for role, font in typography.items() %}
- *{{ role }}:* {{ font.font | default(font, true) }}
{% endfor %}
{% endif %}

#pagebreak()

// --- Voice & Tone ---
= Voice & Tone

{{ voice_description | default("The brand communicates with authenticity and purpose.", true) }}

{% if voice_attributes %}
== Voice Attributes

{% for attr in voice_attributes %}
- {{ attr }}
{% endfor %}
{% endif %}

// --- Content Strategy ---
= Content Strategy

{{ content_strategy | default("A multi-channel content approach aligned with brand voice.", true) }}

{% if channel_strategy %}
== Channel Priorities

{% for ch in channel_strategy %}
- *{{ ch.name | default(ch, true) }}:* {{ ch.approach | default("", true) }}
{% endfor %}
{% endif %}

#pagebreak()

